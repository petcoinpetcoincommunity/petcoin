# Game initialization
players = ['Player 1', 'Player 2', 'Player 3', 'Player 4']
player_positions = {player: 0 for player in players}

def roll_dice():
    return random.randint(1, 6)

def play_turn(player):
    input(f"{player}'s turn. Press Enter to roll the dice.")
    dice_roll = roll_dice()
    print(f"{player} rolled a {dice_roll}")

    # Update player position
    player_positions[player] += dice_roll

# Main game loop
while True:
    for player in players:
        play_turn(player)
        print(f"{player}'s position: {player_positions[player]}")
        
        if player_positions[player] >= 100:
            print(f"{player} wins!")
